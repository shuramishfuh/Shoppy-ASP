@model IEnumerable<Shop.Models.Product>

@{
    ViewData["Title"] = "Shop";

}

<div class="  container-fluid">
    <div class="row w-auto h-auto">
        <div class="col-sm-12 col-md-12 col-xl-12 col-lg-12">
            <div id="carouselExampleIndicators" class="carousel " data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-auto img-responsive" src="~/Images/12.jpg" height="400" width="200" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-auto  img-responsive" src="~/Images/second2.jpg" height="400" width="200" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-auto  img-responsive" src="~/Images/third.jpg" height="400" width="200" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-auto  img-responsive" src="~/Images/fouth.jpg" height="400" width="200" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row ">
    <div class="w-100 h-25 move text-center text-monospace text-uppercase"><b> order we deliver on time</b></div>
     
</div>
<div class="row px-5 pt-5">

    @foreach (var item in Model)
    {

        <div class="col-md-4 mt-4 mt-sm-0 ">
            <div class="card text-center product p-4 pt-5 border-0 h-100 rounded-0 blink">
                <img class="img-fluid d-block mx-auto rounded " width="200" height="200" src="~/@item.ImagePath" alt="~/Images/notAvai.jpg">
                <div class="card-body  py-0 h-xs-440p">
                    <h5 class="card-title font-weight-semi-bold mb-3 w-xl-220p mx-auto">@item.Name</h5>
                    <br />
                    <h7 class="BriefDescription text-center card-text">@item.BriefDescription</h7> <br />
                    <h7 class="text-left"><b>Brand</b>: @item.Brand</h7>
                    <hr />
                    <p class="text-success btn text-justify"><b>Price</b>: SAR @item.Price</p> <br />
                </div>
                <p class="btn w-100 px-4 mx-auto">
                    <a asp-action="Buy" asp-route-id="@item.ProductId">
                        <input type="submit" class="btn btn-warning btn-lg w-100 buy rounded-pill" id="BuyBotton" data-target="" value="Buy Now"> @*#extraLargeModal*@
                    </a>
                </p>
            </div>
        </div>
    }
</div>



